<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back_ground3"
    android:orientation="vertical"
    android:weightSum="1">

    <Button
        android:id="@+id/btn_setting"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_toEndOf="@+id/joinBtn"
        android:layout_toRightOf="@+id/joinBtn"
        android:background="@drawable/button_cus"
        android:text="@string/setting"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_comname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="BINGO GAME"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3" />

    <TextView
        android:id="@+id/UsernameStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IpaddrEdit"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/UserName"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/UsernameEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/UsernameStr"
        android:layout_alignStart="@+id/UsernameStr"
        android:layout_below="@+id/UsernameStr"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="請輸入您的暱稱"
        android:textColor="#000000"
        android:textSize="30dp" />

    <Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/joinBtn"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_below="@+id/UsernameEdit"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_cus"
            android:text="@string/join"
            android:textSize="30dp" />

        <Button
            android:id="@+id/openBtn"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/joinBtn"
            android:layout_alignStart="@+id/joinBtn"
            android:layout_below="@+id/joinBtn"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_cus"
            android:text="@string/create"
            android:textSize="30dp" />
    </LinearLayout>

</LinearLayout>
